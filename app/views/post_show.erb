<!-- A page showing a particular post, including comments -->
<table>

  <tr>
    <th>Title:</th>
    <th>Comments:</th>
    <th>Created at:</th>
    <th>Author</th>
  </tr>

  <tr>
    <td><%= @post.title %></td>
    <td><%= @post.comments.count %></td>
    <td><%= @post.created_at %></td>
    <td><a href="/user/<%= @post.user.id %>"><%= @post.user.username %></a></td>
  </tr>

</table>

<form action="/comments" method="POST">
  <input type="hidden" name="post_id" value="<%= @post.id %>">
  <textarea name="user_comment" placeholder="Add comment here"></textarea>
  <input type="submit">
</form>

