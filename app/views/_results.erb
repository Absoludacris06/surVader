
  <h1>Results for <%= @survey.label %></h1>
  <ol>
  <% @questions.each_with_index do |question, index| %>
    <h3><li><%=question.label%></li></h3>
    <div class="table-responsive">
        <table class="table table-striped ">
          <tr>
            <th>Choice</th>
            <th>Number of Votes</th>
          </tr>
      <% @choices[index].each do |choice| %>
          <tr>
            <td><%=choice.label%></td>
            <td><%=choice.responses.count%></td>
          </tr>
      <% end %>
      </table>
        </div>
      <div class="barGraphs" id="barGraph-<%=index%>" style="height: 250px;" data-survey="<%=@survey.id%>" data-question="<%=question.id%>"></div>
  <% end %>
  </ol>
  <a class="btn btn-danger pull-right" href="/">Return to dashboard</a>


